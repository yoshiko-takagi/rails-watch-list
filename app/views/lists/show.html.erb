<div class="container mt-3">
  <h1><%= @list.name %></h1>
  <div class="cards">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card-trip mb-3">
        <%= image_tag bookmark.movie.poster_url, width: 300 %>
        <div class="card-trip-infos">
          <div>
            <h2><%= bookmark.movie.title %></h2>
            <p><strong>Reviews</strong></p>
            <p><%= bookmark.comment %></p>
          </div>
          <p>Rating <%= bookmark.movie.rating.to_f %></p>
          <div></div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="text-decoration-none">
    <p><%= link_to 'Add a movie', new_list_bookmark_path(@list), class: "btn btn-flat" %></p>
    <p><%= link_to 'Back to Movie Lists', lists_path, class: "headline text-decoration-none" %></p>
  </div>
</div>
