<div class="container mt-3">
<div>
  <h1><%= @list.name %></h1>
  <ul>
    <% @list.bookmarks.each do |bookmark| %>
    <li><%= bookmark.movie.title %></li>
    <li>Comment: <%= bookmark.comment %></li>
    <li>Rating: <%= bookmark.movie.rating.to_f %></li>
    <%= image_tag bookmark.movie.poster_url, width: 300 %>
  <% end %>
  </ul>

</div>

<p><%= link_to 'Add to Bookmark', new_list_bookmark_path(@list) %></p>
<p><%#= link_to 'Delete Bookmark', list_path(@list) class: 'card-remove-link', data: { turbo_method: :delete, turbo_confirm: "Exterminate #{alien.name}?"%></p>
<p><%= link_to 'Back to Lists', lists_path %></p>
</div>
